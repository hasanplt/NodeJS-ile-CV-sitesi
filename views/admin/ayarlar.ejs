    <%-include("inc/header.ejs")%>
    <link rel="stylesheet" type="text/css" href="/admin/assets/css/widgets/modules-widgets.css">  
    <link href="/admin/assets/css/scrollspyNav.css" rel="stylesheet" type="text/css" />  
    <link rel="stylesheet" type="text/css" href="/admin/assets/css/elements/alert.css">
    <style>
        .btn-light { border-color: transparent; }
    </style>
    <link href="/admin/plugins/file-upload/file-upload-with-preview.min.css" rel="stylesheet" type="text/css" />
        <!--  BEGIN CONTENT AREA  -->
        <div id="content" class="main-content">
            <div class="layout-px-spacing">

                <div class="row layout-top-spacing">

                    <div id="basic" class="col-lg-12 layout-spacing">
                        <% if (durum == true) { %>
                            <div class="alert alert-light-success border-0 mb-4" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg> ... </svg></button>
                                <strong>Başarılı!</strong> Hakkımda verileriniz başarıyla güncellendi.</button>
                            </div> 
                        <% }else if(durum == false){ %>
                            <div class="alert alert-light-danger border-0 mb-4" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><svg> ... </svg></button>
                                <strong>Başarısız!</strong> Hakkımda verileriniz güncellenemedi. Bir sıkıntı çıktı...</button>
                            </div>
                        <% } %>
                        
                        <div class="statbox widget box box-shadow">
                            <div class="widget-header">
                                <div class="row">
                                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                        <h4>Genel Ayarları Düzenle</h4>
                                    </div>                 
                                </div>
                            </div>
                            <div class="widget-content widget-content-area">

                                <div class="row">
                                    <div class="col-lg-12 col-12 mx-auto">
                                        <form method="POST" action="/admin/ayarlar" enctype="multipart/form-data"> 
                                            <div class="form-row mb-4">
                                                <div class="col">
                                                    <p>Title</p>
                                                    <input type="text" required name="title" class="form-control" value="<%=ayarlar.title%>" placeholder="Sitede gözükecek kişi ismi giriniz...">
                                                </div>
                                                <div class="col">
                                                    <p>Meta Açıklama</p>
                                                    <input type="text" required name="meta_description" class="form-control" value="<%=ayarlar.meta_description%>" placeholder="Sitede gözükecek tagi giriniz...">
                                                </div>
                                            </div>
                                            <div class="form-row mb-4">
                                                <div class="col">
                                                    <div class="custom-file-container" data-upload-id="myFirstImage">
                                                        <label>Favicon Resmini değiştir (aynı kalmasını istiyorsan boş bırak) <a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image">x</a></label>
                                                        <label class="custom-file-container__custom-file" >
                                                            <input type="file" name="fileIcon" class="custom-file-container__custom-file__custom-file-input" accept="image/*">
                                                            <input type="hidden" name="MAX_FILE_SIZE" value="10485760" />
                                                            <span class="custom-file-container__custom-file__custom-file-control"></span>
                                                        </label>
                                                        <div class="custom-file-container__image-preview"></div>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <p>Şu anki fotoğraf</p>
                                                    <img src="/assets/img/favicon.png" alt="" style="margin-left: 50%; margin-top:30%;" width="50px">
                                                </div>
                                            </div>
                                            
                                            <input type="submit" value="Kaydet" class="mt-4 btn btn-primary">
                                        </form>
                                    </div>                                        
                                </div>

                            </div>
                        </div>
                    </div>
                    
                </div>

            </div>
        
        </div>
        <!--  END CONTENT AREA  -->


    </div>
    <!-- END MAIN CONTAINER -->

    <%-include("inc/footer.ejs")%>
    
    <script src="/admin/assets/js/widgets/modules-widgets.js"></script>
    <script src="/admin/assets/js/scrollspyNav.js"></script>
    <script src="plugins/file-upload/file-upload-with-preview.min.js"></script>

    <script>
        //First upload
        var firstUpload = new FileUploadWithPreview('myFirstImage')
    </script>